<h1>Update a Whisky!</h1>

<%= form_for @whiskey do |f| %>

    <%= f.label "Name: " %>
        <%= f.text_field :name %>
    
    <%= f.label "Distillery: " %>
        <%= f.text_field :distillery %>

    <%= f.label "Origin: " %>
        <%= f.text_field :origin %>
    
    <%= f.label "Age (in Years): " %>
        <%= f.text_field :age %>
    
    <%= f.label "Type: " %>
        <%= f.text_field :type %>

    <%= f.label "Proof (%): " %>
        <%= f.text_field :proof %>
    
    <%= f.label "Price: " %>
        <%= f.text_field :price %>

    <%= f.submit "Submit" %>
<% end %>